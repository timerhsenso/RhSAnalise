{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Debug",
      "RhSensoERP": "Trace"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=bd_rhu_copenor_dev;TrustServerCertificate=true;",
    "__comment": "User e Password são configurados via User Secrets"
  },

  "Redis": {
    "Configuration": "localhost:6379,abortConnect=false",
    "InstanceName": "RhSensoERP_Dev_",
    "__comment": "Password é configurada via User Secrets"
  },

  "Cors": {
    "AllowedOrigins": [
      "https://localhost:7001",
      "http://localhost:5000",
      "https://localhost:3000",
      "http://localhost:3000",
      "https://localhost:5173",
      "http://localhost:5173"
    ],
    "AllowedHeaders": [ "*" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS" ],
    "AllowCredentials": true
  },

  "Jwt": {
    "Issuer": "RhSensoERP.Local",
    "Audience": "RhSensoERP.Client",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7,
    "__comment": "Key é configurada via User Secrets"
  },

  "RateLimit": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 1000
      }
    ]
  },

  "Paths": {
    "Logs": "logs",
    "Uploads": "uploads/dev",
    "Temp": "temp/dev"
  },

  "HealthChecks": {
    "UI": {
      "PollingInterval": 10,
      "EvaluationTimeInSeconds": 10,
      "MinimumSecondsBetweenFailureNotifications": 60
    }
  },

  "Diagnostics": {
    "EmailTo": "dev-team@rhsenso.local",
    "LogFilePath": "logs/dev/log-.txt",
    "Smtp": {
      "Host": "localhost",
      "Port": 1025,
      "EnableSsl": false,
      "From": "no-reply@rhsenso.local",
      "__comment": "User e Pass são configurados via User Secrets"
    }
  },

  "Features": {
    "EnableSwagger": true,
    "EnableHealthCheckUI": true,
    "EnableHangfire": true,
    "EnableSignalR": true,
    "EnableAuditing": true,
    "EnableCaching": true,
    "EnableRateLimiting": false
  },

  "Performance": {
    "MaxRequestBodySize": 52428800,
    "CommandTimeout": 30,
    "BulkInsertBatchSize": 1000,
    "CacheDurationInMinutes": 5
  }
}