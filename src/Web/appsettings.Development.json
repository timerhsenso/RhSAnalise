{
  // ============================================================================
  // APPSETTINGS.DEVELOPMENT.JSON - WEB
  // ============================================================================
  // Configura√ß√µes espec√≠ficas para ambiente de DESENVOLVIMENTO da aplica√ß√£o Web.
  // Este arquivo sobrescreve valores do appsettings.json quando
  // ASPNETCORE_ENVIRONMENT=Development
  // ============================================================================

  // ============================================================================
  // LOGGING - N√≠veis de Log para Desenvolvimento
  // ============================================================================
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "System": "Information",
      "System.Net.Http.HttpClient": "Information",
      "RhSensoERP.Web": "Debug"
    }
  },

  "AllowedHosts": "*",

  // ============================================================================
  // API SETTINGS - Configura√ß√£o de Conex√£o com a API
  // ============================================================================
  // üîß CORRE√á√ÉO: Se√ß√£o adicionada para configurar o BaseAddress do HttpClient
  // ============================================================================
  "ApiSettings": {
    // URL base da API (deve corresponder ao launchSettings.json da API)
    "BaseUrl": "https://localhost:7193",
    
    // Timeout padr√£o para requisi√ß√µes (segundos)
    "TimeoutSeconds": 30,
    
    // Timeout espec√≠fico para autentica√ß√£o (segundos)
    // Maior devido a opera√ß√µes de hash de senha
    "AuthTimeoutSeconds": 60,
    
    // N√∫mero de tentativas de retry
    "RetryCount": 3,
    
    // Habilita logging detalhado de requisi√ß√µes HTTP
    "EnableDetailedLogging": true
  },

  // ============================================================================
  // AUTHENTICATION - Configura√ß√£o de Autentica√ß√£o por Cookie
  // ============================================================================
  "Authentication": {
    "LoginPath": "/Account/Login",
    "LogoutPath": "/Account/Logout",
    "AccessDeniedPath": "/Account/AccessDenied",
    "CookieName": "RhSensoERP.Auth",
    "ExpireTimeSpan": 480,
    "SlidingExpiration": true
  },

  // ============================================================================
  // SERILOG - Configura√ß√£o de Logging
  // ============================================================================
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "System.Net.Http.HttpClient": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/web-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
