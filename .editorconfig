# SA1309: Field names should not begin with underscore - Desabilitado (preferência pessoal)
dotnet_diagnostic.SA1309.severity = none

# SA1128: Put constructor initializers on their own line - Sugestão
dotnet_diagnostic.SA1128.severity = suggestion

# SA1210: Using directives should be ordered alphabetically - Sugestão
dotnet_diagnostic.SA1210.severity = suggestion

# SA1513: Closing brace should be followed by blank line - Sugestão
dotnet_diagnostic.SA1513.severity = suggestion

# MA0002: Use overload with IEqualityComparer - Desabilitado
dotnet_diagnostic.MA0002.severity = none

# MA0004: Use ConfigureAwait - Sugestão
dotnet_diagnostic.MA0004.severity = suggestion

# IDE0211: Convert to 'Program.Main' style - Desabilitado
dotnet_diagnostic.IDE0211.severity = none

# SA1512: Single-line comments followed by blank line - Desabilitado
